#!/usr/bin/env ruby
#
# X10 sinatra server
#
require 'rubygems'
require 'sinatra'
require 'haml'
require 'x10_sinatra'

enable :run


get '/style.css' do
end

get '/' do
    haml :index
end

post '/x10' do
    device = params['device_letter'] + params['device_num']
    x10sinatra = X10Sinatra.new(device)

    case params['command']
    when "on"
        x10sinatra.on
    when "off"
        x10sinatra.off
    when "step up"
        x10sinatra.step_up
    when "step down"
        x10sinatra.step_down
    end
    redirect ("/")
end
        
